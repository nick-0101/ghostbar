{
  "name": "GhostBar",
  "description": "Base Level Extension",
  "version": "1.0",
  "manifest_version": 3,
  "permissions": ["storage", "activeTab", "scripting"],
  "host_permissions": ["http://localhost:5173/*"],
  "action": {
    "default_popup": "index.html",
    "default_icon": "public/hello_extensions.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["src/content/style.css", "src/content/fonts/Inter.ttf"],
      "matches": ["<all_urls>"]
    }
  ],
  "background": {
    "service_worker": "src/background.js",
    "type": "module"
  },
  "commands": {
    "toggle-ghostbar": {
      "suggested_key": {
        "default": "Alt+Shift+I",
        "mac": "Alt+Shift+I"
      },
      "description": "Toggle GhostBar overlay"
    }
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["src/content/content.ts"]
    }
  ]
}
