{
  "name": "GhostBar",
  "description": "GhostBar transforms your browsing with seamless AI chat on every page. Highlight, ask, and get instant responses—from explanations to brainstorming—all in one click, no copy-paste required.",
  "version": "1.0",
  "manifest_version": 3,
  "permissions": ["storage", "activeTab", "scripting"],
  "host_permissions": ["http://localhost:5173/*"],
  "icons": {
    "16": "public/ghostbar_logo_16x16.png",
    "32": "public/ghostbar_logo_32x32.png",
    "48": "public/ghostbar_logo_48x48.png",
    "128": "public/ghostbar_logo_128x128.png"
  },
  "action": {
    "default_popup": "index.html",
    "default_icon": {
      "16": "public/ghostbar_logo_16x16.png",
      "32": "public/ghostbar_logo_32x32.png",
      "48": "public/ghostbar_logo_48x48.png",
      "128": "public/ghostbar_logo_128x128.png"
    }
  },
  "web_accessible_resources": [
    {
      "resources": ["src/content/style.css", "src/content/Geist.ttf"],
      "matches": ["<all_urls>"]
    }
  ],
  "background": {
    "service_worker": "src/background.js",
    "type": "module"
  },
  "commands": {
    "toggle-ghostbar": {
      "suggested_key": {
        "default": "Alt+I",
        "mac": "Alt+I",
        "windows": "Alt+I"
      },
      "description": "Toggle GhostBar overlay"
    }
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["src/content/content.ts"]
    }
  ]
}
