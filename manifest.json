{
  "name": "GhostBar",
  "description": "Base Level Extension",
  "version": "1.0",
  "manifest_version": 3,
  "permissions": ["storage"],
  "host_permissions": ["http://localhost:5173/*"],
  "action": {
    "default_popup": "index.html",
    "default_icon": "public/hello_extensions.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["src/main.ts"]
    }
  ]
}
